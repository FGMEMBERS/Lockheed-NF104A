  <animation>
    <type>rotate</type>
    <object-name>porteG</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>   0 </dep></entry>
      <entry><ind> 0.1 </ind><dep> 110 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 120 </dep></entry>
    </interpolation>
    <axis>
      <x1-m>  1.616 </x1-m>
      <y1-m> -0.490 </y1-m>
      <z1-m> -1.193 </z1-m>
      <x2-m>  0.793 </x2-m>
