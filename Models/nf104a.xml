<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>nf104a.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Lockheed-NF104A/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>porteG</object-name>
    <object-name>porteD</object-name>
    <object-name>porteAG</object-name>
    <object-name>porteAD</object-name>
    <object-name>canopy</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
    <object-name>derive</object-name>
    <object-name>entreeair</object-name>
    <object-name>aerofreinG</object-name>
    <object-name>aerofreinD</object-name>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>sortie</object-name>
    <object-name>fusee</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>trous</object-name>

    <!-- Objets transparents -->
    <object-name>vitres</object-name>
    <object-name>canopytrans</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass_shader.png</texture>
    <object-name>vitres</object-name>
    <object-name>canopytrans</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitres</object-name>
    <object-name>canopytrans</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>porteG</object-name>
    <object-name>porteD</object-name>
    <object-name>porteAG</object-name>
    <object-name>porteAD</object-name>
    <object-name>canopy</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
    <object-name>derive</object-name>
    <object-name>entreeair</object-name>
    <object-name>aerofreinG</object-name>
    <object-name>aerofreinD</object-name>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>sortie</object-name>
    <object-name>fusee</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>trous</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Interieur -->
  <model>
    <path>Aircraft/Lockheed-NF104A/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>15</factor>
    <center>
      <x-m>  2.692 </x-m>
      <y-m> -2.544 </y-m>
      <z-m> -1.024 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y> 
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>15</factor>
    <center>
      <x-m>  2.692 </x-m>
      <y-m>  2.544 </y-m>
      <z-m> -1.024 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y> 
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>surface-positions/flaps-pos-norm</property>
    <factor>45</factor>
    <center>
      <x-m>  2.692 </x-m>
      <y-m> -1.520 </y-m>
      <z-m> -0.912 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y> 
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD</object-name>
    <property>surface-positions/flaps-pos-norm</property>
    <factor>45</factor>
    <center>
      <x-m>  2.692 </x-m>
      <y-m>  1.520 </y-m>
      <z-m> -0.912 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y> 
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeurG</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>10</factor>
    <axis>
      <x1-m>  6.716 </x1-m>
      <y1-m> -1.645 </y1-m>
      <z1-m>  1.416 </z1-m>
      <x2-m>  6.459 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  1.424 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>profondeurD</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>10</factor>
    <axis>
      <x1-m> 6.459 </x1-m>
      <y1-m> 0.000 </y1-m>
      <z1-m> 1.424 </z1-m>
      <x2-m> 6.716 </x2-m>
      <y2-m> 1.645 </y2-m>
      <z2-m> 1.416 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>15</factor>
    <axis>
      <x1-m> 6.812 </x1-m>
      <y1-m> 0.000 </y1-m>
      <z1-m> 1.342 </z1-m>
      <x2-m> 6.940 </x2-m>
      <y2-m> 0.000 </y2-m>
      <z2-m> 0.405 </z2-m>
    </axis>
  </animation>
  
  <!-- Aerofreins -->
  <animation>
    <type>rotate</type>
    <object-name>aerofreinG</object-name>
    <property>surface-positions/speedbrake-pos-norm</property>
    <factor>-60</factor>
    <center>
      <x-m>  4.058 </x-m>
      <y-m> -0.693 </y-m>
      <z-m> -0.656 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>aerofreinD</object-name>
    <property>surface-positions/speedbrake-pos-norm</property>
    <factor>60</factor>
    <center>
      <x-m>  4.058 </x-m>
      <y-m>  0.693 </y-m>
      <z-m> -0.656 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
 
  <!-- Rentrée des roues -->
  <animation>
    <name>TrainAvant</name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainAvant</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -95 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.741 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.245 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
 
  <animation>
    <name>TrainGauche</name>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainGauche</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -65 </dep></entry>
      <entry><ind> 0.6 </ind><dep> -65 </dep></entry>
      <entry><ind> 1.0 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  1.753 </x-m>
      <y-m> -0.320 </y-m>
      <z-m> -1.235 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainGauche</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 110 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  1.753 </x-m>
      <y-m> -0.320 </y-m>
      <z-m> -1.235 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainDroit</name>
    <object-name>axeD</object-name>
    <object-name>roueD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainDroit</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 65 </dep></entry>
      <entry><ind> 0.6 </ind><dep> 65 </dep></entry>
      <entry><ind> 1.0 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  1.753 </x-m>
      <y-m>  0.320 </y-m>
      <z-m> -1.235 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainDroit</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 110 </dep></entry>
      <entry><ind> 1.0 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  1.753 </x-m>
      <y-m>  0.320 </y-m>
      <z-m> -1.235 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Fermeture des portes des trains -->
  <animation>
    <type>rotate</type>
    <object-name>porteAG</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.1 </ind><dep> 88 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 90 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.069 </x1-m>
      <y1-m> -0.236 </y1-m>
      <z1-m> -1.356 </z1-m>
      <x2-m> -2.546 </x2-m>
      <y2-m> -0.236 </y2-m>
      <z2-m> -1.358 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteAD</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.1 </ind><dep> 88 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 90 </dep></entry>
    </interpolation>
    <axis>
