    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <name>CanopyTotale</name>
    <object-name>canopy</object-name>
    <object-name>canopytrans</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>CanopyTotale</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor>120</factor>
    <axis>
      <x1-m> -3.831 </x1-m>
      <y1-m> -0.365 </y1-m>
      <z1-m> -0.458 </z1-m>
      <x2-m> -3.285 </x2-m>
      <y2-m> -0.386 </y2-m>
      <z2-m> -0.390 </z2-m>
    </axis>
  </animation>

</PropertyList>
