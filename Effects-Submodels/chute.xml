<?xml version = '1.0' ?>
<PropertyList>

<!--***drag chute***-->

<path>chute.ac</path>

<animation>
	<type>select</type>
	<object-name>chute</object-name>
	<condition>
		<equals>
			<property>fdm/jsbsim/systems/chute/deploy</property>
			<value>1</value>
		</equals>
	</condition>
</animation>

<animation>
	<type>rotate</type>
	<object-name>chute</object-name>
	<property>fdm/jsbsim/systems/chute/unfurl-norm</property>
	<factor>-7</factor>
	<center>
		<x-m>5.643581</x-m>
		<y-m>0</y-m>
		<z-m>-1.064857</z-m>
	</center>
	<axis>	
		<y>1</y>
	</axis>	
</animation>

<animation>
	<type>rotate</type>
	<object-name>chute</object-name>
	<property>orientation/pitch-deg</property>
	<center>
		<x-m>5.643581</x-m>
		<y-m>0</y-m>
		<z-m>-1.064857</z-m>
	</center>
	<axis>	
		<y>-1</y>
	</axis>	
</animation>

<animation>
	<type>scale</type>
	<object-name>chute</object-name>
	<property>fdm/jsbsim/systems/chute/unfurl-norm</property>
   <center>
		<x-m>0</x-m>
		<y-m>0</y-m>
		<z-m>-1.064857</z-m>
   </center>
	<x-min>1</x-min>
	<y-min>1</y-min>
	<z-min>1</z-min>
	<x-factor>1</x-factor>
	<y-factor>10</y-factor>
	<z-factor>10</z-factor>
</animation>

</PropertyList>
